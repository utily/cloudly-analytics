{
	// Update search.exclude if you add a pattern to files.exclude
	"files.exclude": {
		".*": true,
		"*.code-workspace": true,
		"*.json": true,
		"CODEOWNERS": true,
		"dist": true,
		"LICENSE": true,
		"node_modules": true,
		"README.md": true,
		"worker-test/.*": true,
		"worker-test/*.d.ts": true,
		"worker-test/*.js": true,
		"worker-test/*.json": true,
		"worker-test/dist": true,
		"worker-test/node_modules": true,
		"worker-test/rollup.config.js": true,
		"worker-test/tsconfig.*": true,
		"worker-storage/.*": true,
		"worker-storage/*.d.ts": true,
		"worker-storage/*.js": true,
		"worker-storage/*.json": true,
		"worker-storage/dist": true,
		"worker-storage/node_modules": true,
		"worker-storage/rollup.config.js": true,
		"worker-storage/tsconfig.*": true,
		"tsconfig.*": true
	},
	// Make it possible to open excluded files with Ctrl + P
	"search.exclude": {
		".*": false,
		"*.code-workspace": false,
		"*.json": false,
		"CODEOWNERS": false,
		"dist": false,
		"LICENSE": false,
		"node_modules": false,
		"README.md": false,
		"worker-test/.*": false,
		"worker-test/*.d.ts": false,
		"worker-test/*.js": false,
		"worker-test/*.json": false,
		"worker-test/dist": false,
		"worker-test/node_modules": false,
		"worker-test/rollup.config.js": false,
		"worker-test/tsconfig.*": false,
		"worker-storage/.*": false,
		"worker-storage/*.d.ts": false,
		"worker-storage/*.js": false,
		"worker-storage/*.json": false,
		"worker-storage/dist": false,
		"worker-storage/node_modules": false,
		"worker-storage/rollup.config.js": false,
		"worker-storage/tsconfig.*": false,
		"tsconfig.*": false
	},
	"files.insertFinalNewline": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"eslint.autoFixOnSave": true,
	},
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"javascript.format.enable": false,
	"typescript.format.enable": false,
	"cSpell.words": [
		"authly",
		"cloudly",
		"cryptly",
		"flagly",
		"gracely",
		"isly",
		"isoly",
		"langly",
		"paramly",
		"persistly",
		"prettierx",
		"selectivly",
		"servly",
		"servly-azure",
		"smoothly",
		"tidily",
		"transactly",
		"unlisten",
		"uply",
		"utily"
	]
}
