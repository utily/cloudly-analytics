{
	"configurations": [
		{
			"name": "Miniflare (launch)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"cwd": "${workspaceFolder}/worker-configuration",
			"runtimeArgs": [
				"--experimental-vm-modules",
				"--inspect",
				"./node_modules/miniflare/dist/src/cli.js",
				"./dist/_worker.mjs",
				"--wrangler-env",
				"miniflare",
				"--watch",
				"-B",
				""
			],
			"skipFiles": [
				"<node_internals>/**"
			],
			"preLaunchTask": "TypeScript watcher"
		},
		{
			"name": "Miniflare (attach)",
			"type": "node",
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
		}
	]
}
